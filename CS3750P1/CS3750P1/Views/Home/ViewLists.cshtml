@{ToDoContext db = new ToDoContext();}

@{
    ViewBag.Title = "View Lists";
}

<div class="jumbotron">
    <h2>@ViewBag.Title.</h2>
    <p>Select a category to filter lists from the drop down box below</p>
    @using (Html.BeginForm("ListByCategory", "Home", FormMethod.Post))
    {
        @Html.DropDownList("catSubmit", new SelectList(db.Categories, "categoryName", "categoryName"), "--All Categories--", new { @class = "form-control" })

        <div class='btn-toolbar'>
            <div class='btn-group'>
                <input type="submit" class="btn btn-info btn-sm" value="Submit">
                <a class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("ListAll", "Home")'">List All</a>
            </div>
        </div>
    }
</div>

<div class="container">
    @if (ViewBag.Category != null)
    {
        <h2 align="center">- @ViewBag.Category -</h2>

        <table class="table">
            <tr>
                <th>
                    List Name
                </th>
                <th>
                    Status
                </th>
                <th>
                    Item Count
                </th>
                <th></th>
            </tr>

            @foreach (List l in ViewBag.List)
            {
                <tr>
                    <td>
                        @l.listName
                    </td>
                    @if (l.isCompleted != null && (bool)l.isCompleted)
                    {
                        <td>Complete</td>
                    }
                    else
                    {
                        <td>In progress</td>
                    }
                    <td>
                        @CountItems(l.listID)
                    </td>
                    <td>
                        @Html.ActionLink("View/Edit", "ViewEditList", "Home", new { id = @l.listID }, null) |
                        @Html.ActionLink(linkText: "Delete", actionName: "DeleteList", controllerName: "Home", routeValues: new { id = @l.listID, cat = @ViewBag.Category }, htmlAttributes: new { onclick = "return confirm('You are about to delete list \"" + l.listName + "\". Click \"OK\" to confirm.');" })
                    </td>
                </tr>
            }
        </table>
    }
</div>

@functions
{
    public int CountItems(int id)
    {
        ToDoContext db = new ToDoContext();
        int count = 0;
        foreach(Item i in db.Items)
        {
            if (i.listID == id)
            {
                count++;
            }
        }
        return count;
    }
}

