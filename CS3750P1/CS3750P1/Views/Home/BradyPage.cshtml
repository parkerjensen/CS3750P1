<div>
    @using (Html.BeginForm("ListByCategory", "Home", FormMethod.Post))
    {
        @Html.ListBox("catSubmit", new SelectList(ctx.Categories, "categoryName", "categoryName"), "--Select Category--")
        <input type="submit" />
    }
